# Copy to .env and adjust values before running docker compose
# Generate a strong Base64 JWT secret: openssl rand -base64 64

MYSQL_DATABASE=biznex
MYSQL_USER=bizuser
MYSQL_PASSWORD=ChangeMeDbPwd123!
MYSQL_ROOT_PASSWORD=ChangeMeRootPwd123!
MYSQL_PORT=3306

# Base64 (>=32 bytes decoded). Example placeholder only.
JWT_SECRET=ReplaceWithBase64Secret
JWT_EXPIRATION=900000               # 15 min in ms
JWT_REFRESH_EXPIRATION=1209600000    # 14 days in ms

CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
# Optional custom origins: https://app.example.com,https://admin.example.com

# Optional override of methods/headers (usually keep defaults)
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# CORS_ALLOWED_HEADERS=Authorization,Content-Type
# CORS_EXPOSED_HEADERS=Authorization
# CORS_MAX_AGE=3600

